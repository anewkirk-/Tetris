<UserControl x:Class="Tetris.GameScreens.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="125" />
            <Setter Property="Margin" Value="10" />
        </Style>
    </UserControl.Resources>
    
    <StackPanel x:Name="MM_mainPanel"
                Margin="50">
        
        <!--Logo image to replace this-->
        <Label Content="dotTetris"
               HorizontalAlignment="Center"/>
        <!--Logo image to replace this-->
        
        <Button x:Name="MM_singlePlayer"
                Content="Single Player"/>
        <Button x:Name="MM_twoPlayer"
                Content="Two Player"/>
        <Button x:Name="MM_scoreBoards"
                Content="High Scores"/>
        <Button x:Name="MM_options"
                Content="Options"/>
        <Button x:Name="MM_quit"
                Content="Quit"/>
    </StackPanel>
</UserControl>
