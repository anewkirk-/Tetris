<UserControl x:Class="Tetris.Views.GameScreens.TwoPlayerModeSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="850"
             Background="{StaticResource ResourceKey=MainBackground}">

    <StackPanel x:Name="TPMS_mainPanel"
                Margin="50">

        <Image Source="/Images/vsLogo.png" 
               Width="500"
               Margin="0,0,0,30"/>

        <Button x:Name="TPMS_classic"
                Style="{StaticResource ResourceKey=MenuButtons}"
                Content="Classic"/>
        <Button x:Name="TPMS_timed"
                Style="{StaticResource ResourceKey=MenuButtons}"
                Content="Timed"/>
        <Button x:Name="TPMS_marathon"
                Style="{StaticResource ResourceKey=MenuButtons}"
                Content="Marathon"/>
        <Button x:Name="SPMS_load"
                Style="{StaticResource ResourceKey=MenuButtons}"
                Content="Load Game"/>
        <Button x:Name="TPMS_back"
                Style="{StaticResource ResourceKey=MenuButtons}"
                Content="Back to Main Menu"/>
    </StackPanel>
</UserControl>
